{
  "system": {
    "short_hostname":"linux",
    "domain_name":"localdomain"
  },
  "authorization": {
    "sudo": {
      "groups": [ "vagrant" ],
      "users": [ "vagrant" ],
      "passwordless":"true",
      "include_sudoers_d":"true"
    }
  },  
  "run_list": [ "recipe[system]", "recipe[system::upgrade_packages]", "recipe[ntp]", "recipe[resolver]", "recipe[cron]", "recipe[sudo]", "recipe[python]", "recipe[ruby]", "recipe[rubygems]", "recipe[rubygems::install_gems]" ]
}